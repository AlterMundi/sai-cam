storage:
  base_path: '/opt/sai-cam/storage'
  max_size_gb: 20              # Hard limit - triggers forced cleanup
  cleanup_threshold_gb: 18     # Target size after cleanup (90% of max)
  retention_days: 7            # Keep uploaded files for this many days

server:
  url: 'https://your-server.com/webhook/endpoint'
  ssl_verify: true
  cert_path: '/etc/ssl/certs/ca-certificates.crt'
  timeout: 30
  auth_token: 'your_auth_token_here'

monitoring:
  health_check_interval: 300
  max_memory_percent: 80
  max_cpu_percent: 90
  restart_on_failure: true

logging:
  level: 'WARNING'  # Production default: WARNING (only warnings & errors), INFO, or DEBUG
  log_dir: '/var/log/sai-cam'
  log_file: 'camera_service.log'
  max_size_bytes: 10485760
  backup_count: 5

advanced:
  ffmpeg_debug: false
  ffmpeg_options: 'rtsp_transport;tcp|video_codec;h265|hwaccel;vaapi|hwaccel_device;/dev/dri/renderD128|pixel_format;yuv420p'
  camera_init_wait: 2
  polling_interval: 0.1
  reconnect_attempts: 3
  reconnect_delay: 5

# Status Portal Configuration (optional - uses smart defaults if omitted)
portal:
  enabled: true            # Enable web status portal
  port: 80                 # Port for status portal (default: 80)
  refresh_interval: 5      # Dashboard refresh interval in seconds

# WiFi Access Point Configuration (optional - auto-enabled if wlan0 exists)
wifi_ap:
  enabled: auto            # auto = enable if hardware present, true/false to force
  ssid: auto               # auto = use "SAI-{device_id}", or specify custom SSID
  password: 'saicam123'    # WiFi password (minimum 8 characters)
  channel: 6               # WiFi channel (1-11)
  country_code: 'AR'       # Country code for regulatory compliance