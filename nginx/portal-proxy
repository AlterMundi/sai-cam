# SAI-Cam Status Portal Proxy Configuration
# This makes the portal accessible on port 80 (the default HTTP port)
#
# NOTE: __AP_IP__ is replaced at install time with value from .env

server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    add_header X-Frame-Options "SAMEORIGIN" always;

    # Captive portal detection endpoints - return 302 to trigger portal prompt
    location /generate_204 {
        return 302 http://__AP_IP__/;
    }

    location /hotspot-detect.html {
        return 302 http://__AP_IP__/;
    }

    location /ncsi.txt {
        return 302 http://__AP_IP__/;
    }

    location /connecttest.txt {
        return 302 http://__AP_IP__/;
    }

    location /success.txt {
        return 302 http://__AP_IP__/;
    }

    # Status portal - proxy to Flask on port 8090
    location / {
        proxy_pass http://127.0.0.1:8090;
        proxy_http_version 1.1;

        # WebSocket support for SSE (Server-Sent Events) log streaming
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Forward client information
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Timeouts for SSE
        proxy_read_timeout 600s;
        proxy_connect_timeout 600s;
        proxy_send_timeout 600s;

        # Disable buffering for SSE
        proxy_buffering off;
        proxy_cache off;

        # SSE-specific headers
        chunked_transfer_encoding off;
    }

    # Camera proxy endpoints (keep existing camera proxies accessible)
    location /camera/1/ {
        proxy_pass http://192.168.220.71:80/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /camera/2/ {
        proxy_pass http://192.168.220.72:80/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /camera/3/ {
        proxy_pass http://192.168.220.73:80/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /camera/4/ {
        proxy_pass http://192.168.220.74:80/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /camera/5/ {
        proxy_pass http://192.168.220.10:80/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    # Health check endpoint
    location /health {
        access_log off;
        return 200 "OK\n";
        add_header Content-Type text/plain;
    }
}
