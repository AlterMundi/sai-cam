# SAI-Cam Status Portal Proxy Configuration
# This makes the portal accessible on port 80 (the default HTTP port)

server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    # Status portal - proxy to Flask on port 8090
    location / {
        proxy_pass http://127.0.0.1:8090;
        proxy_http_version 1.1;

        # WebSocket support for SSE (Server-Sent Events) log streaming
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Forward client information
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Timeouts for SSE
        proxy_read_timeout 600s;
        proxy_connect_timeout 600s;
        proxy_send_timeout 600s;

        # Disable buffering for SSE
        proxy_buffering off;
        proxy_cache off;

        # SSE-specific headers
        chunked_transfer_encoding off;
    }

    # Camera proxy endpoints (keep existing camera proxies accessible)
    location ~ ^/camera/([0-9]+)/ {
        set $camera_port 0;

        # Map camera number to port
        if ($1 = "1") { set $camera_port 8080; }
        if ($1 = "2") { set $camera_port 8081; }
        if ($1 = "3") { set $camera_port 8082; }
        if ($1 = "4") { set $camera_port 8083; }
        if ($1 = "5") { set $camera_port 8084; }

        proxy_pass http://127.0.0.1:$camera_port/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    # Health check endpoint
    location /health {
        access_log off;
        return 200 "OK\n";
        add_header Content-Type text/plain;
    }
}
